<div class="container">
      <!--Data or Content-->
      <div class="box-1">
          <div class="content-holder">
              <h2>Καλώς Ορίσατε!</h2>
              <button class="button-1" onclick="signup();">Sign up</button>
          </div>
      </div>

      
      <!--Forms-->
      <div class="box-2">
          <div class="login-form-container">
            <h1>Login Form</h1>
                <form action="/login" id="loginForm" method="post">
                <input type="text" placeholder="Username" class="input-field" name="username">
                <br><br>
                <input type="password" placeholder="Password" class="input-field" name="password" autocomplete="current-password">
                <br><br>
                <button class="login-button" type="submit">Login</button>
            </form>
          </div>


<!--Create Container for Signup form-->

        <div id="loginMessage">
            {{message}}
        </div>
      </div>